# https://eslint.org/docs/rules/
# https://eslint.org/docs/user-guide/configuring#specifying-environments
env:
  # browser: true
  commonjs: true
  es6: true
  # node: true
extends: 'eslint:recommended'
parserOptions:
  # ecmaVersion: 2018
  ecmaVersion: 5
  sourceType: module
  files:
    -
      patterns: '**/*.bemhtml'
rules:
  no-unused-vars:
    - warn
    -
      vars: local
      varsIgnorePattern: ^_
  # indent:
  #   - warn
  #   - 2
  linebreak-style:
    - error
    - unix
  # quotes:
  #   - warn
  #   - single
  semi:
    - error
    - always
globals:
  modules: true
  config: true
